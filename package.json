{
  "name": "metro-pids",
  "version": "1.3.2",
  "description": "Metro-PIDS ",
  "author": "",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:sdk": "node ./scripts/build-display-sdk.js",
    "publish:gh": "electron-builder --publish=always",
    "deploy:gitee": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-to-gitee.ps1 -RepoUrl https://gitee.com/tanzhouxkong/Metro-PIDS-.git -Branch pages"
  },
  "build": {
    "appId": "com.Metro-PIDS.myapp",
    "productName": "metro-pids",
    "publish": [
      {
        "provider": "generic",
        "url": "https://gitee.com/tanzhouxkong/Metro-PIDS-/raw/main/releases/"
      },
      {
        "provider": "github",
        "owner": "tanzhouxkong",
        "repo": "Metro-PIDS-"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist"
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "publish": [
        {
          "provider": "generic",
          "url": "https://gitee.com/tanzhouxkong/Metro-PIDS-/raw/main/releases/win32/"
        },
        {
          "provider": "github",
          "owner": "tanzhouxkong",
          "repo": "Metro-PIDS-"
        }
      ]
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns",
      "publish": [
        {
          "provider": "generic",
          "url": "https://gitee.com/tanzhouxkong/Metro-PIDS-/raw/main/releases/mac/"
        },
        {
          "provider": "github",
          "owner": "tanzhouxkong",
          "repo": "Metro-PIDS-"
        }
      ]
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.png",
      "publish": [
        {
          "provider": "generic",
          "url": "https://gitee.com/tanzhouxkong/Metro-PIDS-/raw/main/releases/linux/"
        },
        {
          "provider": "github",
          "owner": "tanzhouxkong",
          "repo": "Metro-PIDS-"
        }
      ]
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^5.4.3"
  }
}
