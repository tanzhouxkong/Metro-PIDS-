    },
    "displayNotSync": {
      "problem": "显示端数据不同步",
      "solution": "检查 BroadcastChannel 连接和消息格式"
    },
    "systemDisplayProtection": {
      "problem": "无法编辑或删除系统显示器",
      "solution": "这是正常的保护机制，系统显示器不允许修改以确保基本功能"
    }
  }
